@model IEnumerable<MyWeb.Models.Orders>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/admin.cshtml";
}
<div class="container">

    <h2>Index</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrdersDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrdersDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @string.Format("{0:0,00}", item.TotalPrice)
                    </td>
                    <td>
                        <form asp-action="Edit" method="post">
                            <input type="hidden" name="OrderId" value="@item.OrderId" />
                            <div class="form-group">
                                <select name="status">
                                    @if (item.Status == 0)
                                    {
                                        <option value="0" selected>Chưa duyệt</option>
                                        <option value="1">Chưa duyệt</option>
                                        <option value="2">Đã duyệt</option>
                                        <option value="3">Đã giao</option>
                                        <option value="4">Đã hủy</option>

                                    }
                                    else if (item.Status == 1)
                                    {
                                        <option value="0">Chưa duyệt</option>
                                        <option value="1" selected>Chưa duyệt</option>
                                        <option value="2">Đã duyệt</option>
                                        <option value="3">Đã giao</option>
                                        <option value="4">Đã hủy</option>
                                    }
                                    else if (item.Status == 2)
                                    {
                                        <option value="0">Chưa duyệt</option>
                                        <option value="1">Chưa duyệt</option>
                                        <option value="2" selected>Đã duyệt</option>
                                        <option value="3">Đã giao</option>
                                        <option value="4">Đã hủy</option>
                                    }
                                    else if (item.Status == 3)
                                    {
                                        <option value="0" >Chưa duyệt</option>
                                        <option value="1">Chưa duyệt</option>
                                        <option value="2">Đã duyệt</option>
                                        <option value="3" selected>Đã giao</option>
                                        <option value="4">Đã hủy</option>
                                    }
                                    else if (item.Status == 4)
                                    {
                                        <option value="0" >Chưa duyệt</option>
                                        <option value="1">Chưa duyệt</option>
                                        <option value="2">Đã duyệt</option>
                                        <option value="3">Đã giao</option>
                                        <option value="4" selected>Đã hủy</option>
                                    }
                                </select>
                                <button>Update</button>
                            </div>
                        </form>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                    </td>
                    <td>
                        <a asp-action="OrdersDetails" asp-route-id="@item.OrderId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
