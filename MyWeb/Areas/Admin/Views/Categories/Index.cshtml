@model X.PagedList.IPagedList<MyWeb.Models.Category>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/admin.cshtml";
}

<br />
<form action="" method="get" class="form-inline">
    <div class="form-group">
        <label class="sr-only" for="">label</label>
        <input class="form-control" name="name" placeholder="Input Name">
    </div>
    <button type="submit" class="btn btn-default mr-1"><i class="fas fa-search"></i></button>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add</a>
</form>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CategoryName)

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)

                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions
{
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }
}
)
