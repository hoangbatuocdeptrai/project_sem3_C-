@model MyWeb.Models.Product

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--================Single Product Area =================-->
<div class="product_image_area">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <div class="s_product_img">
                    <div id="carouselExampleIndicators"
                         class="carousel slide"
                         data-ride="carousel">
                        <ol class="carousel-indicators"></ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100"
                                     src="~/images/avatar/@Html.DisplayFor(model => model.Image)"
                                     alt="First slide" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3>@Html.DisplayFor(model => model.ProductName)</h3>
                    <h2>@string.Format("{0:0,00}", Model.Price) đ</h2>
                    <ul class="list">
                        <li>
                            <a class="active" href="#">
                                <span>Category</span> : @Html.DisplayFor(model => model.Category.CategoryName)
                            </a>
                        </li>
                    </ul>
                   
                    <br />
                    <div class="card_area">
                        <a class="main_btn" asp-controller="Cart" asp-action="Add" asp-route-id="@Model.ProductID">Add to Cart </a>
                        <a class="icon_btn" href="#">
                            <i class="lnr lnr lnr-diamond"></i>
                        </a>
                        <a class="icon_btn" href="#">
                            <i class="lnr lnr lnr-heart"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--================End Single Product Area =================-->
<br />
