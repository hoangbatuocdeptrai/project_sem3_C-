
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--================Category Product Area =================-->
<section class="cat_product_area section_gap">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-9">
                <div class="product_top_bar">
                    <div class="left_dorp">
                        <select class="sorting">
                            <option value="1">Default sorting</option>
                            <option value="2">Default sorting 01</option>
                            <option value="4">Default sorting 02</option>
                        </select>
                        <select class="show">
                            <option value="1">Show 12</option>
                            <option value="2">Show 14</option>
                            <option value="4">Show 16</option>
                        </select>
                    </div>
                </div>

                <div class="latest_product_inner">
                    <div class="row">
                        @foreach (var item in ViewBag.pro)
                        {

                            <div class="col-lg-4 col-md-6">
                                <div class="single-product">
                                    <div class="product-img">
                                        <img class="card-img"
                                             src="~/images/avatar/@item.Image"
                                             alt="" />
                                        <div class="p_icon">
                                            <a asp-controller="DetailsProduct" asp-action="Index" asp-route-id="@item.ProductID">
                                                <i class="ti-eye"></i>
                                            </a>
                                            @*<a href="#">
                                                <i class="ti-heart"></i>
                                            </a>*@
                                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.ProductID">
                                                <i class="ti-shopping-cart"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="product-btm">
                                        <a href="#" class="d-block">
                                            <h4>@item.ProductName</h4>
                                        </a>
                                        @if (item.SalePrice > item.Price)
                                        {
                                            <span class="mr-4">@string.Format("{0:0,00}", item.SalePrice) đ</span>
                                            <<div class="mt-3">
                                                <del>@string.Format("{0:0,00}", item.Price)</del>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="mr-4">@string.Format("{0:0,00}", item.Price) đ</span>

                                        }
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="left_sidebar_area">
                    <aside class="left_widgets p_filter_widgets">
                        <div class="l_w_title">
                            <h3>Browse Categories </h3>
                        </div>
                        <div class="widgets_inner">
                            <ul class="list">
                                @foreach (var item in ViewBag.cate)
                                {

                                    <li>
                                        <a asp-action="Index" asp-controller="Shop" asp-route-id="@item.CategoryId">@item.CategoryName</a>
                                    </li>
                                }

                            </ul>
                        </div>
